//create a route(mini express app)
const exp=require('express')
const sellerApp=exp.Router()

//add express-async-handler to handle async errors
const expressAsyncHandler=require('express-async-handler')

const {createSeller,loginSeller}=require('../Controllers/sellerControllers')


//create Seller
 sellerApp.post('/seller',expressAsyncHandler(createSeller))
 //login Seller
 sellerApp.post('/login',expressAsyncHandler(loginSeller))


 module.exports=sellerApp;